{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "biome.configurationPath": "web/biome.json",
  "biome.lsp.bin": "web/node_modules/.bin/biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#5d5d5d",
    "activityBar.background": "#5d5d5d",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#38a738",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#5d5d5d",
    "statusBar.background": "#444444",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#5d5d5d",
    "statusBarItem.remoteBackground": "#444444",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#444444",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#44444499",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#444444",
  "chat.tools.terminal.autoApprove": {
    "npx vitest": true,
    "npx biome": true
  }
}
